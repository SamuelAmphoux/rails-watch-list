<div class="banner" style="background-image: url('<%=asset_path('theater.png')%>')">
  <div class="container">
    <div class="banner_container">
      <div>
        <h1>Here are the Movie Lists</h1>
        <p>Broaden one's horizons with these selections of movies !</p>
      </div>
      <div>
        <%= link_to new_list_path, remote:true do %>
          <button type="button" class="btn btn-primary">Add a new list</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.banner.attached? ? cl_image_path(list.banner.key, height: 300, crop: :fill) : asset_path('default_list') %>')">
              <div class="list_name">
               <%= link_to "#{list.name.capitalize}", list_path(list) %>
              </div>
              <div class="delete_tag">
                <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, remote:true do %>
                  <i class="fa-solid fa-trash-can"></i>
                <% end %>
              </div>
            </div>
    <% end %>
  </div>
</div>
